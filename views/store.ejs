<%- include('header-layout.ejs') %>

    <!-- SECTION -->
    <div class="section" style="min-height: 100vh;">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">
                <!-- ASIDE -->
                    <!-- aside Widget -->
                    

                    <!-- store products -->
                    <div class="row">
                        <% products.forEach(function(Product) {%>
                            <div class="col-md-4 col-xs-6">
                                <!-- product -->
                                <div class="product">
                                    <div class="product-img">
                                        <img src="/public/img/product_img/<%= Product.imgUrl[0] %>" alt="">
                                        <div class="product-label">
                                            <% if(Product.discount>0){%>
                                                <span class="sale">-<%= Product.discount%>%</span>
                                                <%}%>
                                                <!-- <span class="new">NEW</span> -->
                                            </div>
                                    </div>
                                    <div class="product-body">
                                        <p class="product-category">
                                            <%= Product.category %>
                                        </p>
                                        <h3 class="product-name" style="height: 30px; overflow-y: hidden;"><a
                                                href="#">
                                                <%= Product.name %>
                                            </a></h3>
                                            <h4 class="product-price">
                                                <i class="fa-solid fa-indian-rupee-sign"></i>
                                                <%= Product.newPrice %>
                                                    <%if(Product.newPrice != Product.price){%>
                                                        <del
                                                        class="product-old-price"><i class="fa-solid fa-indian-rupee-sign"></i><%= Product.price %></del>
                                                        <%}%>
                                            </h4>
                                        <!-- <div class="product-rating">
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                                <i class="fa fa-star"></i>
                                            </div> -->
                                        <div class="product-btns">
                                            <% if(user){ %>
                                                <% let flag=false; if(wishList.products){%>
                                                    <%for(let pro of wishList.products){%>

                                                        <% if(pro.toString()==Product._id.toString()){
                                                            flag=true;%>

                                                            <%}}%>
                                                                <%if(flag==true){%>
                                                                    <button class="quick-view" type=""><a
                                                                            href="/addToWishList/<%= Product._id %>"><i
                                                                                class="fa-solid fa-heart"
                                                                                style="color: red;"></i><span
                                                                                class="tooltipp">add
                                                                                to
                                                                                wishlist</span></a></button>
                                                                    <%}else{%>
                                                                        <button class="quick-view" type=""><a
                                                                                href="/addToWishList/<%= Product._id %>"><i
                                                                                    class="fa fa-heart-o"></i><span
                                                                                    class="tooltipp">add
                                                                                    to
                                                                                    wishlist</span></a></button>
                                                                        <%}%>

                                                                            <%}}else{%>
                                                                                <button class="add-to-wishlist"
                                                                                    type=""><a href="/login"><i
                                                                                            class="fa fa-heart-o"></i><span
                                                                                            class="tooltipp">add
                                                                                            to
                                                                                            wishlist</span></a></button>
                                                                                <%}%>
                                                        <!-- <button class="add-to-compare"><i
                                                        class="fa fa-exchange"></i><span class="tooltipp">add to
                                                        compare</span></button> -->
                                                        <button class="quick-view" type=""><a
                                                                href="/product/<%= Product._id %>"><i
                                                                    class="fa fa-eye"></i>
                                                                <span class="tooltipp">quick
                                                                    view</span></a></button>
                                        </div>
                                    </div>
                                    <% if (Product.stock==0){%>
                                        <a href="#" class="add-to-cart">
                                            <button class="add-to-cart-btn"><i class="fa-solid fa-circle-xmark"></i>
                                                Out of stock</button>
                                        </a>
                                        <%}else{%>
                                            <% if(user){ %>
                                                <a href="/addToCart/<%= Product._id %>/<%= Product.quantity %>/<%= Product.price %>"
                                                    class="add-to-cart">
                                                    <button class="add-to-cart-btn"><i
                                                            class="fa fa-shopping-cart"></i>
                                                        add
                                                        to cart</button>
                                                </a>
                                                <%}else{%>
                                                    <a href="/login" class="add-to-cart">
                                                        <button class="add-to-cart-btn"><i
                                                                class="fa fa-shopping-cart"></i>
                                                            add
                                                            to cart</button>
                                                    </a>
                                                    <%}}%>

                                </div>
                                <!-- /product -->
                            </div>
                            <%})%>
                    </div>


                    <!-- store bottom filter -->
                    
                    <!-- /store bottom filter -->
                </div>
                <!-- /STORE -->
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /SECTION -->


    <%- include('footer-layout.ejs') %>