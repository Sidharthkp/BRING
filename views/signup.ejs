<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup</title>

    <link rel="stylesheet" href="/public/stylesheets/login.css">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>

<body>


    <!--                     -->


    <div class="page">
        <div class="container">
            <div class="left">
                <div class="login"><a href="/" class="bring">
                        BRING
                    </a></div>
                <div class="eula">By logging in you agree to the ridiculously long terms that you didn't bother to read
                </div>
            </div>
            <div class="rightS">
                <div class="form">
                    <form class="forms_form" id="registering">
                        <label for="email">Name</label>
                        <input type="text" placeholder="Enter your name" id="name" name="name"
                            pattern="^(?=[a-zA-Z0-9._]{8,20}$)(?!.*[_.]{2})[^_.].*[^_.]$">
                        <label for="email">Email</label>
                        <input type="email" placeholder="Enter your email" id="email" name="email"
                            pattern="^[a-zA-Z0-9+_.-]+@[a-zA-Z0-9.-]+\.[a-zA-z]{2,3}$">
                        <label for="password">Password</label>
                        <input type="password" placeholder="Enter your password" id="password"
                            pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,10}$"
                            name="password">
                        <label for="password">Confirm</label>
                        <input type="password" id="confirm" placeholder="Re-enter the password" name="confirm"
                            pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,10}$">
                        <div style="position: absolute; margin-top: 12px;">
                            <input type="checkbox" onclick="myFunction()" style="width: 16px;">
                            <p
                                style="color: rgb(150, 150, 150); margin-left: 20px; font-size: 16px; margin-top: -33px;">
                                Show Password</p>
                        </div>
                        <input type="submit" id="submit" value="Submit">

                    </form>
                    <div class="eula">
                        Already have an account? <a href="/login"
                            style="text-decoration: none; color: #ff0000;">Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script>
        function myFunction() {
            var x = document.getElementById("password");
            if (x.type === "password") {
                x.type = "text";
            } else {
                x.type = "password";
            }
        }
    </script>
    <script src="/public/js/login.js"></script>
    <script src="/public/js/anime.min.js"></script>


    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- JavaScript Bundle with Popper -->
