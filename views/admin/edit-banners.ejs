<%- include("../admin/header-layout.ejs") %>
    <section>
        <div class="container mt-4">
            <div class="row">
                <div class="col-md-6">
                    <h2 class="text-center">Edit Banners</h2>
                    <form action="/admin/edit-banners/<%= Banner._id %>" method="post">
                        <br>
                        <input type="text" required placeholder="Name" name="name" value="<%= Banner.name %>" class="form-control"
                            style="border-color: grey;">
                        <br>
                        <input type="text" required placeholder="Source" name="source" value="<%= Banner.source %>" class="form-control"
                            style="border-color: grey;">
                        <button type="submit" class="btn btn-success mt-4">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <%- include("../admin/footer-layout.ejs") %>