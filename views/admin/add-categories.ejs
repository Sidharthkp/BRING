    <section>
        <div class="container mt-4">
            <div class="row">
                <div class="col-md-6">
                    <h2 class="text-center">Add Category</h2>
                    <form action="/add-categories" method="post" enctype="multipart/form-data">
                        <br>
                        <input type="text" required placeholder="Name" name="name" class="form-control"
                            style="border-color: grey;">
                        <br>
                        <input type="file" required style="background-color: black; border-color: grey;" name="imgUrl"
                            class="form-control">
                        <button type="submit" class="btn btn-success mt-4">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </section>
