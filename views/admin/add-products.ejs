<%- include("../admin/header-layout.ejs") %>
        <section>
            <div class="container mt-4">
                <div class="row">
                    <div class="col-md-6">
                        <h2 class="text-center">Add Product</h2>
                        <form action="/add-products" method="post" enctype="multipart/form-data">
                        </br>
                            <input type="text" required placeholder="Name" name="name" class="form-control" style="border-color: grey;">
                        </br>   
                            <input type="text" required name="price" placeholder="Price" class="form-control" style="border-color: grey;">
                        </br> 
                            <input type="text" required name="description" placeholder="Description" class="form-control" style="border-color: grey;">
                        </br> 
                            <select name="category" required style="border-color: grey;" class="form-select form-select-sm mb-3" aria-label=".form-select-sm example">
                                <option selected>Select the category</option>
                                <% categories.forEach(function(Category) {%>
                                <option value="mobile"><%= Category.name %></option>
                                <%})%>
                            </select>
                        </br> 
                            <input type="file" multiple required style="background-color: black; border-color: grey;" name="imgUrl" class="form-control">
                            <button type="submit" class="btn btn-success mt-4">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
        <%- include("../admin/footer-layout.ejs") %>