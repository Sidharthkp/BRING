<body>
	<!-- HEADER -->
	<header>
		<!-- TOP HEADER -->
		<div id="top-header">
			<div class="container">
				<ul class="header-links pull-left">
					<li><a href="#"><i class="fa fa-phone"></i> +021-95-51-84</a></li>
					<li><a href="#"><i class="fa fa-envelope-o"></i> email@email.com</a></li>
					<li><a href="#"><i class="fa fa-map-marker"></i> 1734 Stonecoal Road</a></li>
				</ul>
				<ul class="header-links pull-right">
					<% if(user){ %>
						<li><i class="fa-solid fa-hand-peace"></i><a>Hi, <%= user.name %></a></li>
						<%} %>
							<li><i class="fa fa-user-o"></i><a href="/profile">My Profile</a></li>
							<% if(user){ %>
								<li><i class="fa-solid fa-right-from-bracket"></i><a href="/logout">Logout</a></li>
								<%} %>
				</ul>
			</div>
		</div>
		<!-- /TOP HEADER -->

		<!-- MAIN HEADER -->
		<div id="header">
			<!-- container -->
			<div class="container">
				<!-- row -->
				<div class="row">
					<!-- LOGO -->
					<div class="col-md-3">
						<div class="header-logo">
							<a href="/" class="brand">
								BRING
							</a>
						</div>
					</div>
					<!-- /LOGO -->

					<!-- SEARCH BAR -->
					<div class="col-md-6">
						<div class="header-search">
							<form>
								<select class="input-select">
									<option value="0">All Categories</option>
									<option value="1">Category 01</option>
									<option value="1">Category 02</option>
								</select>
								<input class="input" placeholder="Search here">
								<button class="search-btn">Search</button>
							</form>
						</div>
					</div>
					<!-- /SEARCH BAR -->

					<!-- ACCOUNT -->
					<div class="col-md-3 clearfix">
						<div class="header-ctn">
							<!-- Wishlist -->
							<div>
								<a href="/wishList">
									<i class="fa fa-heart-o"></i>
									<span>Your Wishlist</span>
									<%if(user){%>
										<div class="qty">
											<%= counts %>
										</div>
										<%}%>
								</a>
							</div>
							<!-- /Wishlist -->

							<!-- Cart -->
							<div>
								<a href="/cart" aria-expanded="true">
									<i class="fa fa-shopping-cart"></i>
									<span>Your Cart</span>
									<%if(user){%>
										<div class="qty">
											<%= count %>
										</div>
										<%}%>
								</a>
							</div>

							<!-- /Cart -->

							<!-- Orders -->
							<div>
								<a href="/orderHistory" aria-expanded="true">
									<i class="fa-solid fa-clock-rotate-left"></i>
									<span>Your Orders</span>
								</a>
							</div>
							<!-- /Orders -->

							<!-- Menu Toogle -->
							<div class="menu-toggle">
								<a href="#">
									<i class="fa fa-bars"></i>
									<span>Menu</span>
								</a>
							</div>
							<!-- /Menu Toogle -->
						</div>
					</div>
					<!-- /ACCOUNT -->
				</div>
				<!-- row -->
			</div>
			<!-- container -->
		</div>
		<!-- /MAIN HEADER -->
	</header>
	<!-- /HEADER -->

	<!-- NAVIGATION -->
	<nav id="navigation">
		<!-- container -->
		<div class="container">
			<!-- responsive-nav -->
			<div id="responsive-nav">
