<%- include('header-layout.ejs') %>

    <!-- SECTION -->
    <div class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">

                <div class="col-md-7">
                    <div>
                        <% viewcart.products.forEach((data)=>{%>

                            <div class="product">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="product-img" style="width: 200px;">
                                            <img src="/public/img/product_img/<%= data.productId.imgUrl[0] %>" alt="">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="product-body">
                                            <p class="product-category">
                                                <%= data.productId.category %>
                                            </p>
                                            <h3 class="product-name"><a href="#">
                                                    <%= data.productId.name %>
                                                </a></h3>
                                            <h4 class="product-price">
                                                ₹<%= data.productId.price %>
                                                    <!-- <del
                                                        class="product-old-price">$990.00</del> -->
                                            </h4>
                                            <div class="qty-label">

                                                <div class="input-number">
                                                    Qty:
                                                    <a class="qty-up" href="/button-increment/<%= data.productId._id %>"
                                                        onclick="addToCart('<%=data.productId.id%>','<%=data.productId.name%>','<%=data.productId.price %>',1)">+</a>
                                                        <input id="itemQty-<%= data.productId.id %>" type="text"
                                                            value="<%= data.quantity %>"
                                                            style="height: 40px; width: 30px; border: none;">

                                                        <a class="qty-down" href="/button-decrement/<%= data.productId._id %>"
                                                            onclick="addToCart('<%=data.productId.id%>','<%=data.productId.name%>','<%=data.productId.price %>',-1)">-</a>
                                                </div>
                                            </div>
                                            <!-- <div class="product-rating">
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                </div> -->
                                            <div class="product-btns">
                                                <button class="add-to-wishlist"><i class="fa fa-heart-o"></i><span
                                                        class="tooltipp">add to
                                                        wishlist</span></button>
                                                <button class="add-to-compare"><a
                                                        href="/deleteCart/<%= data.productId._id %>"><i
                                                            class="fa-solid fa-trash-can"></i><span class="tooltipp">add
                                                            to
                                                            delete</span></a></button>
                                                <button class="quick-view" type=""><a
                                                        href="/product/<%= data.productId._id %>"><i
                                                            class="fa fa-eye"></i>
                                                        <span class="tooltipp">quick view</span></a></button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <%})%>
                    </div>

                    <!-- Shiping Details -->
                    <div class="shiping-details">
                        <div class="section-title text-center">
                            <h3 class="title">Shiping address</h3>
                        </div>
                        <div class="container" style="width: 50rem;">
                            <form>
                                <div class="caption">
                                    <div class="form-group">
                                        <input class="input" type="text" name="first_name"
                                            value="<%= address[0].first_name %>">
                                    </div>
                                    <div class="form-group">
                                        <input class="input" type="text" name="last_name"
                                            value="<%= address[0].last_name %>">
                                    </div>
                                    <div class="form-group">
                                        <input class="input" type="email" name="email" value="<%= address[0].email %>">
                                        <small id="emailHelp" class="form-text text-muted">We'll never share your email
                                            with
                                            anyone
                                            else.</small>
                                    </div>
                                    <div class="form-group">
                                        <input class="input" type="text" name="address"
                                            value="<%= address[0].address %>">
                                    </div>
                                    <div class="form-group">
                                        <input class="input" type="text" name="city" value="<%= address[0].city %>">
                                    </div>
                                    <div class="form-group">
                                        <input class="input" type="text" name="district"
                                            value="<%= address[0].district %>">
                                    </div>
                                    <div class="form-group">
                                        <input class="input" type="text" name="state" value="<%= address[0].state %>">
                                    </div>
                                    <div class="form-group">
                                        <input class="input" type="text" name="country"
                                            value="<%= address[0].country %>">
                                    </div>
                                    <div class="form-group">
                                        <input class="input" type="text" name="zip" value="<%= address[0].zip %>">
                                    </div>
                                    <div class="form-group">
                                        <input class="input" type="tel" name="tel" value="<%= address[0].tel %>">
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="input-checkbox">
                            <input type="checkbox" id="shiping-address">
                            <label for="shiping-address">
                                <span></span>
                                Ship to a diffrent address?
                            </label>
                            <div class="caption">
                                <!-- <div class="form-group">
                                    <input class="input" type="text" name="first-name" placeholder="First Name">
                                </div>
                                <div class="form-group">
                                    <input class="input" type="text" name="last-name" placeholder="Last Name">
                                </div>
                                <div class="form-group">
                                    <input class="input" type="email" name="email" placeholder="Email">
                                </div>
                                <div class="form-group">
                                    <input class="input" type="text" name="address" placeholder="Address">
                                </div>
                                <div class="form-group">
                                    <input class="input" type="text" name="city" placeholder="City">
                                </div>
                                <div class="form-group">
                                    <input class="input" type="text" name="country" placeholder="Country">
                                </div>
                                <div class="form-group">
                                    <input class="input" type="text" name="zip-code" placeholder="ZIP Code">
                                </div>
                                <div class="form-group">
                                    <input class="input" type="tel" name="tel" placeholder="Telephone">
                                </div> -->
                            </div>
                        </div>
                    </div>
                    <!-- /Shiping Details -->

                    <!-- Order notes -->
                    <div class="order-notes">
                        <textarea class="input" placeholder="Order Notes"></textarea>
                    </div>
                    <!-- /Order notes -->
                </div>

                <!-- Order Details -->
                <div class="col-md-5 order-details">
                    <div class="section-title text-center">
                        <h3 class="title">Your Order</h3>
                    </div>
                    <div class="order-summary">
                        <div class="order-col">
                            <div><strong>PRODUCT</strong></div>
                            <div><strong>TOTAL</strong></div>
                        </div>
                        <div class="order-products">
                            <%viewcart.products.forEach((data)=>{%>
                                <div class="order-col">
                                    <div><%= data.quantity %>x <%= data.productId.name %>
                                    </div>
                                    <div>₹<%=data.subTotal%>
                                    </div>
                                </div>
                                <%})%>
                                    <!-- <div class="order-col">
                                <div>2x Product Name Goes Here</div>
                                <div> ₹980.00</div>
                            </div> -->
                        </div>
                        <div class="order-col">
                            <div>Shiping</div>
                            <div><strong>FREE</strong></div>
                        </div>
                        <div class="order-col">
                            <div><strong>TOTAL</strong></div>
                            <div><strong class="order-total">₹<%= viewcart.total %></strong></div>
                        </div>
                    </div>
                    <div class="payment-method">
                        <div class="input-radio">
                            <input type="radio" name="payment" id="payment-1">
                            <label for="payment-1">
                                <span></span>
                                Cash on delivery
                            </label>
                            <div class="caption">
                                <p>Please use this payment method only if you are certain that someone will be available
                                    to receive and pay for your order upon delivery. If you intend to leave the address
                                    you provided, kindly endorse your payment to another party to ensure your order is
                                    delivered successfully. The standard, but not guaranteed, timeframe for shipping is
                                    between 2 and 7 days.</p>
                            </div>
                        </div>
                        <div class="input-radio">
                            <input type="radio" name="payment" id="payment-2">
                            <label for="payment-2">
                                <span></span>
                                Razorpay
                            </label>
                            <div class="caption">
                                <p>The price and availability of items at BRING are subject to change. The shopping
                                    cart is a temporary place to store a list of your items and reflects each item's
                                    most recent price.
                                    Do you have a promotional code? We'll ask you to enter your claim code when it's
                                    time to pay.</p>
                            </div>
                        </div>
