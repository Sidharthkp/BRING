<%- include('header-layout.ejs') %>

    <!-- SECTION -->
    <div class="section" style="min-height: 100vh;">
        <% if(data !=null) {%>
            <!-- container -->
            <div class="container">
                <!-- row -->
                <div class="row">

                    <div class="col-md-12">
                        <div>
                            <%for (let wishList of data.products){%>

                                <div class="product">
                                    <div class="row">
                                        <div class="col-md-12 text-center">
                                            <div>
                                                <img width="300rem"
                                                    src="/public/img/product_img/<%= wishList.imgUrl[0] %>" alt="">
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="product-body">
                                                <p class="product-category">
                                                    <%= wishList.category %>
                                                </p>
                                                <h3 class="product-name"><a href="#">
                                                        <%= wishList.name %>
                                                    </a></h3>
                                                <h4 class="product-price">
                                                    <i class="fa-solid fa-indian-rupee-sign"></i>
                                                    <%= wishList.newPrice %>
                                                        <%if(wishList.newPrice !=wishList.price){%>
                                                            <del class="product-old-price"><i
                                                                    class="fa-solid fa-indian-rupee-sign"></i>
                                                                <%= wishList.price %>
                                                            </del>
                                                            <%}%>
                                                </h4>
                                                <!-- <div class="product-rating">
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                </div> -->
                                                <div class="product-btns">
                                                    <button class="add-to-compare"><a
                                                            href="/deleteWishList/<%= wishList._id %>"><i
                                                                class="fa-solid fa-trash-can"></i><span
                                                                class="tooltipp">
                                                                delete</span></a></button>
                                                    <button class="quick-view" type=""><a
                                                            href="/product/<%= wishList._id %>"><i
                                                                class="fa fa-eye"></i>
                                                            <span class="tooltipp">quick view</span></a></button>
                                                </div>
                                                <% if (wishList.stock==0){%>
                                                    <a>
                                                        <button class="add-to-cart-btn"
                                                            style="border: none; margin-top: 10px; background-color: white;"><i
                                                                class="fa-solid fa-circle-xmark"></i>
                                                            Out Of Stock</button>
                                                    </a>
                                                    <%}else{%>
                                                        <a
                                                            href="/addToCartFromWishlist/<%= wishList._id %>/<%= wishList.quantity %>/<%= wishList.newPrice %>">
                                                            <button class="add-to-cart-btn"
                                                                style="border: none; margin-top: 10px; background-color: white;"><i
                                                                    class="fa fa-shopping-cart"></i>
                                                                Add
                                                                to cart</button>
                                                        </a>
                                                        <%}%>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <%}%>
                        </div>

                    </div>
                </div>
                <!-- /row -->
            </div>
            <!-- /container -->
            <%}if (data.products.length == 0){%>
                <div class="text-center">
                    <div>
                        <h1 style="font-weight: 700;">Your wishlist is empty</h1>
                    </div>
                    <img src="/public/img/giphy.gif" alt="">
                </div>
                <%}%>
    </div>
    <!-- /SECTION -->


    <%- include('footer-layout.ejs') %>